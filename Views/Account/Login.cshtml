@model LoginModel
<div class="col-md-6 col-xs-9 col-sm-6 kontenerStrony">
    <div class="tytulAdmin" customtextcolor="tekstnaglowkow"><h4>Logowanie</h4></div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <form asp-action="Login" method="post" asp-antiforgery="true" class="logowanie">
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <div class="form-group">
            <label asp-for="Email">Nazwa</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Hasło</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <button class="btn btn-primary" type="submit">Zaloguj</button>
    </form>
</div>