@model ApplicationDisplay
<div class="col-md-6 kontenerStrony">
    <div class="bg-primary m-1 p-1"><h4>Wyświetlanie</h4></div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form asp-action="Edit" asp-controller="ApplicationDisplay" method="post" asp-antiforgery="true">
        <input type="hidden" asp-for="ID" />
        <label asp-for="DisplayDark">Kolory żałoby</label>
        <input asp-for="DisplayDark" type="checkbox" />
        <div class="form-group">
            <label asp-for="GlownyNaglowekTlo">Tło głównego nagłówka</label>
            <div><span asp-validation-for="GlownyNaglowekTlo" class="text-danger"></span></div>
            <input asp-for="GlownyNaglowekTlo" type="text" class="form-control demo" />
        </div>
        <div class="form-group">
            <label asp-for="StronaTlo">Tło strony</label>
            <div><span asp-validation-for="StronaTlo" class="text-danger"></span></div>
            <input asp-for="StronaTlo" type="text" class="form-control demo" />
        </div>
        <div class="form-group">
            <label asp-for="NaglowkiTlo">Tła nagłówków</label>
            <div><span asp-validation-for="NaglowkiTlo" class="text-danger"></span></div>
            <input asp-for="NaglowkiTlo" type="text" class="form-control demo" />
        </div>
        <div class="form-group">
            <label asp-for="PrzyciskiKolor">Kolor przycisków</label>
            <div><span asp-validation-for="PrzyciskiKolor" class="text-danger"></span></div>
            <input asp-for="PrzyciskiKolor" type="text" class="form-control demo" />
        </div>
        <div class="form-group">
            <label asp-for="StrefaAdminaKolor">Kolor napisu "Strefa Admina"</label>
            <div><span asp-validation-for="StrefaAdminaKolor" class="text-danger"></span></div>
            <input asp-for="StrefaAdminaKolor" type="text" class="form-control demo" />
        </div>
        <div class="form-group">
            <label asp-for="TrescKolor">Kolor treści</label>
            <div><span asp-validation-for="TrescKolor" class="text-danger"></span></div>
            <input asp-for="TrescKolor" type="text" class="form-control demo" />
        </div>
        <div class="form-group">
            <label asp-for="TrescTlo">Tło treści i kolor tekstu nagłówków</label>
            <div><span asp-validation-for="TrescTlo" class="text-danger"></span></div>
            <input asp-for="TrescTlo" type="text" class="form-control demo" />
        </div>
        <div class="text-center">
            <button class="btn btn-success" type="submit">Zapisz i odśwież</button>
        </div>
    </form>
    <div class="space"></div>
</div>
