@model IEnumerable<IdentityRole>
<div class="col-md-6 kontenerStrony">
    <div class="bg-primary m-1 p-1"><h4>Role</h4></div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <table class="table table-sm table-bordered table-bordered tabela">
        <tr><th>Rola</th><th>Użytkownicy</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">Brak ról</td></tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td identity-role="@role.Id"></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post" asp-antiforgery="true">
                            <a class="btn btn-sm btn-primary" asp-action="Edit"
                               asp-route-id="@role.Id">Edytuj</a>
                            <button type="submit"
                                    class="btn btn-sm btn-danger">
                                Usuń
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <div class="space"></div>
</div>