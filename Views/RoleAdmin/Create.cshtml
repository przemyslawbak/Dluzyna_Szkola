@model string
<div class="col-md-6 kontenerStrony">
    <div class="bg-primary m-1 p-1"><h4>Tworzenie roli</h4></div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Create" method="post" asp-antiforgery="true">
        <div class="form-group">
            <label for="name">Nazwa roli</label>
            <input name="name" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Utwórz nowy poziom dostępu</button>
        <a asp-action="Index" class="btn btn-primary">Anuluj</a>
        <div class="space"></div>
    </form>
</div>