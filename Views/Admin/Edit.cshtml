@model AppUser
<div class="col-md-6 kontenerStrony">
    <div class="bg-primary m-1 p-1"><h4>Edycja użytkownika</h4></div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Edit" method="post" asp-antiforgery="true">
        <div class="form-group">
            <label asp-for="Id">ID</label>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Email">Adres e-mail</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password">Hasło</label>
            <input name="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Zapisz użytkownika</button>
        <a asp-action="Index" class="btn btn-primary">Anuluj</a>
        <div class="space"></div>
    </form>
</div>